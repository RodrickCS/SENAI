package Vetores;

import java.util.Scanner;

public class Exer4 {
	static Scanner scan = new Scanner(System.in);

	public static void main(String[] args) {

		String nomes[] = new String[10];
		String nome;
		nomes[0] = "Alex";
		nomes[1] = "Pedro";
		nomes[2] = "Mateus";
		nomes[3] = "Armando";
		nomes[4] = "Nicole";
		nomes[5] = "Carlos";
		nomes[6] = "Maria";
		nomes[7] = "João";
		nomes[8] = "Paulo";
		nomes[9] = "Artur";

		//for (int i = 0; i < nomes.length; i++) {
			//System.out.println("Digite um nome");
			//nomes[i] = scan.next();
	//	}
		// Não sei o que tem de errado

		System.out.println("Digite um nome para procurar no vetor");
		nome = scan.next();

		for (int i = 0; i < nomes.length; i++) {

			if (nome == nomes[i]) {

				System.out.println("Achei!");

			} else if (i == nomes.length - 1) {

				System.out.println("Não achei");
			}
		}
	}
}